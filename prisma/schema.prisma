generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  password      String
  image         String?
  emailPreferences Json?        @default("{\"applicationUpdates\":true,\"interviewReminders\":true,\"marketingEmails\":false}")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  applications  Application[]
  leetcodeGoals LeetCodeGoal[]
  weeklyGoals   WeeklyGoal[]
}

model Application {
  id           String    @id @default(cuid())
  company      String
  position     String
  status       String
  appliedDate  DateTime
  notes        String?
  followUpDate DateTime?
  referral     String?
  resumeUrl    String?
  userId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id])
}

model LeetCodeProblem {
  id          String         @id @default(cuid())
  title       String         @unique
  difficulty  String
  category    String
  description String
  solution    String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  goals       LeetCodeGoal[]
}

model LeetCodeGoal {
  id         String          @id @default(cuid())
  userId     String
  problemId  String
  targetDate DateTime
  completed  Boolean         @default(false)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  problem    LeetCodeProblem @relation(fields: [problemId], references: [id])
  user       User            @relation(fields: [userId], references: [id])
}

model WeeklyGoal {
  id                    String   @id @default(cuid())
  userId                String
  weekStartDate         DateTime
  targetApplications    Int
  completedApplications Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
}
